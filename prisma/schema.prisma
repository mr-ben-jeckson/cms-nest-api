datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id         String      @id @default(uuid()) @db.Char(36)
  slug       String      @unique
  meta       Json
  title      String
  content    String
  published  Boolean     @default(false)
  author     User        @relation(fields: [authorId], references: [id])
  authorId   String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  deletedAt  DateTime?   // Soft delete field
  postsMedia PostMedia[]
  @@index([slug])
}

model User {
  id        String   @id @default(uuid()) @db.Char(36)
  email     String   @unique
  name      String
  phone     String?
  password  String
  isAdmin   Boolean  @default(false)
  profileId  String?  @db.Char(36)
  profile    Media?   @relation("userProfile", fields: [profileId], references: [id])
  posts     Post[]
  media     Media[]  @relation("UserMedia")
}

model Media {
  id             String      @id @default(uuid()) @db.Char(36)
  url            String
  storage        StorageEnum
  mimeType       String
  size           Int
  extension      String
  filename       String
  originalName   String
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  deletedAt      DateTime?   // Soft delete field
  userId         String
  user           User        @relation("UserMedia", fields: [userId], references: [id])
  profileUsers   User[]      @relation("userProfile")
  posts          PostMedia[]
}

enum StorageEnum {
  LOCAL
  S3
}

model PostMedia {
  postId   String
  mediaId  String
  post     Post   @relation(fields: [postId], references: [id])
  media    Media  @relation(fields: [mediaId], references: [id])
  // Soft delete fields inherited from Post and Media models
  @@id([postId, mediaId])
}

model Setting {
  id    Int    @id @default(autoincrement())
  name  String
  key   String @unique
  value String
}
